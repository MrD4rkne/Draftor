<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Draftor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Draftor.Views.Main"
    Shell.FlyoutBehavior="Disabled"
    Title="Draftor">

    <TabBar x:Name="MainTabBar">
        <Tab Route="GroupsPage"
             Icon="{DynamicResource GroupsIcon}"
             Title="Groups">
            <ShellContent ContentTemplate="{DataTemplate views:GroupsView}"
                          Title="Groups" />
        </Tab>
        <Tab Route="HomePage"
             x:Name="HomePage"
             Title="Home"
             Icon="{DynamicResource CalculatorIcon}">
            <ShellContent ContentTemplate="{DataTemplate views:MainView}"
                          Title="Home" />
        </Tab>
        <Tab Route="SettingsPage"
             Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsView}"
                          Title="Settings" />
        </Tab>
    </TabBar>

</Shell>
