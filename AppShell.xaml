<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Draftor.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Draftor.Views.Main"
       Shell.FlyoutBehavior="Disabled"
       Title="Draftor">

    <TabBar x:Name="MainTabBar"
            Route="HeadPage">
        <!--<Tab Route="GroupsPage"
             Icon="{StaticResource GroupsIcon}"
             Title="Groups">
            <ShellContent ContentTemplate="{DataTemplate views:GroupsView}"/>
        </Tab>-->
        <Tab Route="HomePage"
             x:Name="HomePage"
             Title="Home"
             Icon="{StaticResource HomeIcon}">
            <ShellContent ContentTemplate="{DataTemplate views:MainView}"/>
        </Tab>
        <Tab Route="SettingsPage"
             Title="Settings"
             Icon="{StaticResource SettingsIcon}">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsView}"/>
        </Tab>
    </TabBar>
</Shell>
